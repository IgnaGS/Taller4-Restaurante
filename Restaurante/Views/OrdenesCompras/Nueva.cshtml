@model Restaurante.ViewModels.OrdenesCompras.NuevaOrdenCompraViewModel

@{
    ViewBag.Title = "Nueva";
}

@section scripts {
    <script type="text/javascript">
    </script>
}

<div class="container">
    <h4 class="text-center mt-5">
        Nueva Orden de Compra
    </h4>

    <div class="row">
        <div class="offset-3 col-6">
            @using (Html.BeginForm("Nuevo", "Proveedores", FormMethod.Post))
            {
                <div class="form-group">
                    <label for="Empleado">Empleado</label>
                    @Html.DropDownListFor(model => model.IdEmpleado, Model.Empleados)
                </div>
                <div class="form-group">
                    <label for="Producto">Producto</label>
                    @Html.DropDownListFor(model => model.IdProducto, Model.Productos)
                </div>
                <div class="form-group">
                    <label for="Cantidad">Cantidad</label>
                    @Html.TextBoxFor(x => x.Cantidad, new { @class = "form-control", placeholder = "Ingrese la cantidad que desea ordenar" })
                    @Html.ValidationMessageFor(x => x.Cantidad, "", new { @class = "text-danger" })
                </div>
                
                @Html.ValidationMessage("", new { @class = "text-danger" })
                <button type="submit" class="btn btn-dark">
                    Continuar
                </button>
                <a class="btn btn-outline-dark"
                   href="@Url.Action("Index","OrdenesCompras")">
                    Cancelar
                </a>
            }
        </div>
    </div>
</div>