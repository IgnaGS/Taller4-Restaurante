@model Restaurante.ViewModels.Empleados.EmpleadosViewModel

@{
    ViewBag.Title = "Empleados";
}

@section scripts {
    <script type="text/javascript">
    </script>
}

<div class="container" id="EmpleadosContainer">
    <h4 class="text-center mt-5">
        Lista de Empleados
    </h4>

    @if (Model.Empleados.Any())
    {
        <div class="card">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Legajo</th>
                            <th scope="col">Nombre</th>
                            <th scope="col">Apellido</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var Empleado in Model.Empleados.OrderBy(Empleado => Empleado.Legajo))
                        {
                            <tr>
                                <td>@Empleado.Id</td>
                                <td>@Empleado.Legajo</td>
                                <td>@Empleado.Nombre</td>
                                <td>@Empleado.Apellido</td>
                                
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-primary">No se encontraron resultados de Empleados.</div>
    }
</div>