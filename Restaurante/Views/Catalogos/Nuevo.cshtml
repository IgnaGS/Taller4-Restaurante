@model Restaurante.ViewModels.Catalogos.NuevoCatalogoViewModel

@{
    ViewBag.Title = "Nuevo";
}

@section scripts {
    <script type="text/javascript">
    </script>
}

<div class="container">
    <h4 class="text-center mt-5">
        Nuevo Catálogo
    </h4>

    <div class="row">
        <div class="offset-3 col-6">
            @using (Html.BeginForm("Nuevo", "Catalogos", FormMethod.Post))
            {
                @Html.HiddenFor(x => x.IdProveedor)
                <div class="form-group">
                    <label for="Proveedor">Proveedor</label>
                        @* Acá podría mostrar el nombre del proveedor, de forma orientativa
                            pero ya está asignado en el objeto *@

                </div>
                <div class="form-group">
                    <label for="Producto">Producto</label>
                    @Html.DropDownListFor(model => model.IdProducto, Model.Productos)
                </div>

                <span class="text-danger">@ViewBag.ErrorMessage</span>
                <button type="submit" class="btn btn-dark">
                    Confirmar
                </button>
                <a class="btn btn-outline-dark"
                   href="@Url.Action("Index","Proveedores")">
                    Cancelar
                </a>
            }
        </div>
    </div>
</div>