@model Restaurante.ViewModels.Catalogos.CatalogoViewItem

@{
    ViewBag.Title = "Eliminar";
}

<div class="container">
    <h4 class="text-center mt-5">
        ¿Desea eliminar el siguiente producto del Catálogo?
    </h4>

    <div class="row">
        <div class="offset-3 col-6">
            @using (Html.BeginForm("Eliminar", "Catalogos", FormMethod.Post))
            {
                <input type="hidden" name="Id" value="@Model.Id" />
                <div class="card">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="thead-dark">
                                <tr>
                                    <th scope="col">Producto</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>@Model.Producto</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <span class="text-danger">@ViewBag.ErrorMessage</span>
                <button type="submit" class="btn btn-dark">
                    Confirmar
                </button>
                <a class="btn btn-outline-dark"
                   href="@Url.Action("Index","OrdenesCompras")">
                    Cancelar
                </a>
            }
        </div>
    </div>
</div>