@model Restaurante.ViewModels.Productos.ProductosViewModel

@{
    ViewBag.Title = "Productos";
}

@section scripts {
    <script type="text/javascript">
    </script>
}

<div class="container" id="ProductosContainer">
    <h4 class="text-center mt-5">
        Lista de Productos
    </h4>

    <div class="row my-5">
        <div class="col-2">
            <a class="btn btn-dark form-control text-right" 
               href="@Url.Action("Nuevo","Productos")">
                Nuevo Producto
            </a>
        </div>
    </div>

    @if (Model.Productos.Any())
    {
        <div class="card">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">Descripción</th>
                            <th scope="col">Precio</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var producto in Model.Productos.OrderBy(producto => producto.Descripcion))
                        {
                        <tr>
                            <td>@producto.Descripcion</td>
                            <td>@producto.Precio</td>
                            @*<td>@producto.Disponible</td>*@       @*Este campo falta agregarlo en todos lados para "Deshabilitar" el producto en vez de eliminarlo*@
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-primary">No se encontraron resultados de productos.</div>
    }
</div>